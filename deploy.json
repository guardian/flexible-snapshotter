{
  "defaultStacks" : ["flexible"],
  "packages" : {
    "snapshotter-lambda":{
      "type":"aws-lambda",
      "data":{
        "bucket": "composer-dist",
        "functionName": "flexible-snapshotter-snapshotting-"
      }
    },
    "scheduler-lambda":{
      "type":"aws-lambda",
      "data":{
        "bucket": "composer-dist",
        "functionName": "flexible-snapshotter-scheduling-",
        "fileName": "snapshotter-lambda.zip"
      }
    }
  },
  "recipes":{
    "default":{
      "depends":["lambda-upload", "snapshotter-update", "scheduler-update"]
    },
    "lambda-upload":{
      "actions":["snapshotter-lambda.uploadLambda"]
    },
    "snapshotter-update":{
      "actions":["snapshotter-lambda.updateLambda"]
    },
    "scheduler-update":{
      "actions":["scheduler-lambda.updateLambda"]
    }
  }
}

{
  "defaultStacks" : ["flexible", "flexible-secondary"],
  "packages" : {
    "snapshotter-lambda":{
      "type":"aws-lambda",
      "data":{
        "bucket": "composer-dist",
        "functionNames": [
          "flexible-snapshotter-snapshotting-",
          "flexible-snapshotter-scheduling-"
        ]
      }
    }
  },
  "recipes":{
    "default":{
      "depends":["lambda-upload", "lambda-update"]
    },
    "lambda-upload":{
      "actions":["snapshotter-lambda.uploadLambda"]
    },
    "lambda-update":{
      "actions":["snapshotter-lambda.updateLambda"]
    }
  }
}
